<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/poster" />
    </LinearLayout>


    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="200dp"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/time"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="1h20m"
            android:layout_alignParentRight="true"/>
        <Button
            android:id="@+id/limit_age"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text="18+"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#DDD2D2"

            />
        <Button
            android:id="@+id/action"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/limit_age"
            android:text="Action"
            android:background="#DDD2D2"

            />
        <Button
            android:id="@+id/rate"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:drawableTint="#F4DC0A"
            android:drawableLeft="@drawable/baseline_star_24"
            android:layout_toRightOf="@+id/action"
            android:text="5.0"
            android:background="#DDD2D2"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/baseline_send_24"
            android:layout_alignParentRight="true"
            android:drawableTint="@color/white"
            />
        <TextView
            android:id="@+id/add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/baseline_add_box_24"
            android:layout_toLeftOf="@+id/send"
            android:textColor="@color/white"
            android:drawableTint="@color/white"
        />
        <TextView
            android:id="@+id/movie_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avenger infinity war"
            android:textColor="@color/white"
            android:layout_below="@+id/limit_age"
            android:textSize="20dp"

            />
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mike Banning is framed for the attempted assassingation of the presiedent and must evade his own agency and the FBI as the tries to uncover the real threat. After the events in the previous film, Secret Service"
            android:textColor="@color/white"
            android:layout_below="@+id/movie_name"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actor"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:layout_below="@+id/content"
            android:textSize="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/actor"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/actor"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/actor"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/actor"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>